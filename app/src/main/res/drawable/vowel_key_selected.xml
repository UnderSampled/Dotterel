<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#000DC7"
                android:centerColor="#000"
                android:endColor="#000"
                android:centerY="0.8"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#000384" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>